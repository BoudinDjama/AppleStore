@model IEnumerable<Appstore.Models.Dev>

<head>
    <link rel="stylesheet" href="..\Content\AppsStyle.css">
</head>
@{
    ViewBag.Title = "Today";
}
<h2>@ViewBag.Title</h2>
<h2 class="App-Date-Today">@DateTime.Now.DayOfWeek, @String.Format("{0:MMMM}", DateTime.Now) @DateTime.Now.Day</h2>
<h3>@ViewBag.Message</h3>
<h4>Latest Apps</h4>
<a href="@Url.Action("AllApps","AppStore")">
    <div class="App-wrapper App-float">

        <img class="App-Image" src="..\Images\MW2.jpg">
        <div class="App-categorie-date">NOV 9 2009 / GAMES</div>
        <div class="App-Name">Call of duty: Modern Warfare 2</div>
        <div class="App-Description App-Price-Description">First Person Shooter</div>
        <div class="App-Price App-Price-Description">27.91$</div>
    </div>
</a>

<div class="App-wrapper App-float">
    <img class="App-Image" src="..\Images\bf3.jpg">
    <div class="App-categorie-date">OCT 25 2011 / GAMES</div>

    <div class="App-Name">Battle Field 3</div>
    <div class="App-Description App-Price-Description">First Person Shooter</div>
    <div class="App-Price App-Price-Description">18.99$</div>
</div>

<div class="App-wrapper App-float">
    <img class="App-Image" src="..\Images\bo4.jpg">
    <div class="App-categorie-date">OCT 12 2019 / GAMES</div>

    <div class="App-Name">Call of duty: Black Ops 4</div>
    <div class="App-Description App-Price-Description">First Person Shooter</div>
    <div class="App-Price App-Price-Description">49.99$</div>
</div>

<div class="App-wrapper App-float App-Last">
    <img class="App-Image" src="..\Images\Raging_Blast_2.jpg">
    <div class="App-categorie-date">NOV 2 2010 / GAMES</div>

    <div class="App-Name">Dragon ball: Raging blast 2</div>
    <div class="App-Description App-Price-Description">Action</div>
    <div class="App-Price App-Price-Description">24.99$</div>
</div>

@using (Html.BeginForm())
{
    <p>
        @Html.ActionLink("View All", "AllApps", "AppStore")

    </p>
}



<h4 class="Today-Best-App">App of the day :</h4>

<div class="Today-wrapper ">
    <div class="Today-categorie-date" style="text-align:center">Download Now</div>

    <img class="Today-Image" src="..\Images\Raging_Blast_2.jpg">

    <div class="Today-Name">Dragon ball: Raging blast 2</div>
    <div class="Today-Description App-Price-Description">Action</div>
    <div class="Today-Price App-Price-Description">24.99$</div>
</div>
